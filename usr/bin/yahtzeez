          <action>refresh:varS_'${i}'</action>'
          done)'
          <action>refresh:varU_SCORE</action>
          <action>refresh:varU_BONUS</action>
          <action>refresh:varU_TOTAL</action>
          <action>refresh:varL_SCORE</action>
          <action>refresh:varL_BONUS</action>
